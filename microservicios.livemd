# Helpers para desenrollar respuestas y componer
defmodule Helpers do
  def unwrap({:ok, val}), do: val
  def unwrap(_), do: "FALLO"

  def merge(_entrada) do
    case {Servicio.call(:b, "â†’"), Servicio.call(:c, "â†’")} do
      {{:ok, b}, {:ok, c}} -> "A(#{b} + #{c})"
      _ -> "FALLO EN A"
    end
  end
end

# Arrancamos los servicios (en orden para que dependencias estÃ©n listas)
